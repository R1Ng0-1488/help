$1 равен Vasia
$2 равен Petia
$3 равен Kolia

myOS = `uname -u` - запускает uname -u и сохраняет результат в переенную myOS
Сохранить ввод пользователя в переменную name: read -p "Please enter your name: " name




if-elif-else-fi

if [ $name == "Vasia" ]; then
	echo "privet $name"
elif [ $name == "tramp" ]; then
	echo "hello $name"
else echo "Zdarova $name"
fi

case
x=62 # this is exam result
case $x in
	[1-59] ) echo "exam Failed with mark $x";;
	[60 - 100]) echo "exam passed with mark $x";;
	*) echo " exma mark underfined $x";;
esac

for in with Linux command
for x in ls *.txt; do
	echo $x
done

for  in range
for x in {1..10}; do
	echo $x
done

for like c, c++, java stile
for ((i=1; i<=10; i++));do
	echo $i
done
